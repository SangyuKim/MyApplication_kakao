<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView_viewflipper1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/penguin" />

        <ImageView
            android:id="@+id/imageView_viewflipper2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tulip" />

        <ImageView
            android:id="@+id/imageView_viewflipper3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/de" />

        <ImageView
            android:id="@+id/imageView_viewflipper4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/penguin" />

        <ImageView
            android:id="@+id/imageView_viewflipper5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/koala" />
    </ViewFlipper>
</RelativeLayout>

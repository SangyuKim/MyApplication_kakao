<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_p_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView_p_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_p_picture"
        android:layout_toEndOf="@+id/imageView_p_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView_recent_talk"
        android:layout_below="@+id/textView_p_name"
        android:layout_toRightOf="@+id/imageView_p_picture"
        android:layout_toEndOf="@+id/imageView_p_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="날짜"
        android:id="@+id/textView_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView_boolean_alarm"
        android:layout_toLeftOf="@+id/textView_date"
        android:layout_toStartOf="@+id/textView_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="인원수"
        android:id="@+id/textView_p_count"
        android:layout_toLeftOf="@+id/imageView_boolean_alarm"
        android:layout_toStartOf="@+id/imageView_boolean_alarm" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#99bad2">

      <com.example.myapplication_kakao.com.example.myapplication_kakao.model.CustomViewCircle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_you_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_receive"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_you_picture"
        android:background="@drawable/white"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />
</RelativeLayout>
